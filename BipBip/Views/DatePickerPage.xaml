<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BipBip.Views.DatePickerPage"
             BackgroundColor="#F9FAFB">
    <StackLayout Padding="20" Spacing="20">

        <Label Text="Sélectionnez la date de votre voyage"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="#34495E"
               Margin="0,100,0,10"/>

        <!-- Customisation du DatePicker -->
        <DatePicker x:Name="datePicker"
                    BackgroundColor="Transparent"
                    TextColor="#27AE60"
                    Margin="0,0,0,20"/>

        <!-- Cadre pour le bouton Continuer avec une ombre -->
        <Frame BackgroundColor="#3498DB" CornerRadius="10" Padding="0" HorizontalOptions="FillAndExpand" HasShadow="True">
            <Button Text="Continuer" 
                    Clicked="OnContinueClicked"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20" />
        </Frame>
    </StackLayout>
</ContentPage>
